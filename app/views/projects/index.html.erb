<p id="notice"><%= notice %></p>

<h1 class="text-center text-xl p-4"><%= t('projects.index.myWeddingBookletProjects') %></h1>
<div class="bg-gray-400 py-3">
  <div class="container border rounded m-6 pb-6 tab-component bg-white">

    <ul class="flex border-b tab-buttons bg-gray-100">
        <% @projects.each_with_index do |project, index| %>
          <% if index == 0 then %>
          <li class="-mb-px">
            <button data-tab-index="<%= (index).to_s %>" class="tab-item bg-white inline-block py-2 px-4 border-l border-t border-r rounded-t text-blue-700 font-semibold focus:outline-none active">
          <% else %>
          <li>
            <button data-tab-index="<%= (index).to_s %>" class="tab-item bg-white inline-block py-2 px-4 border-r text-gray-500 hover:text-blue-800 focus:outline-none font-semibold">
          <% end %>
              <%= t('bookletProject') + ' ' + (index+1).to_s %>
          </button>
          </li>
        <% end %>
        <li class="ml-3">
          <%= link_to '+', new_project_path, { title: t('Create New Booklet Project'), class: "tab-item bg-white inline-block py-2 px-3 border text-gray-500 hover:bg-white hover:text-blue-800 focus:outline-none font-semibold rounded-3xl" } %>
        </li>
    </ul>
    <ul class="flex tab-contents pb-6 pl-6 pr-6 py-6">
        <% @projects.each_with_index do |project, index| %>
          <% if index == 0 then %>
          <li data-tab-content-index="<%= (index).to_s %>">
          <% else %>
          <li class="hidden" data-tab-content-index="<%= (index).to_s %>">
          <% end %>
            <h3 class="text-lg p-2 text-center"><%= t('projects.index.projectSummary') %></h3>
            <table class="table-fixed mx-auto">
              <thead>
                <tr>
                  <th class="w-1/4"><%= t('pages.new_project.typeOfMarriageCeremony') %></th>
                  <th class="w-1/4"><%= t('pages.new_project.marriage_date.label') %></th>
                  <th class="w-1/4"><%= t('pages.new_project.marriage_location.church_label') %></th>
                  <th class="w-1/4"><%= t('pages.new_project.marriage_location.city_label') %></th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <td><%= project.liturgy %></td>
                  <td><%= project.weddingdate %></td>
                  <td><%= project.church %></td>
                  <td><%= project.city %></td>
                </tr>
              </tbody>
            </table>

            <table class="mt-6 mx-auto table-fixed">
              <thead>
                <tr>
                  <th class="w-1/3"><%= t('pages.new_project.celebrant.name_prefix_label') %></th>
                  <th class="w-1/3"><%= t('pages.new_project.celebrant.firstname_label') %></th>
                  <th class="w-1/3"><%= t('pages.new_project.celebrant.lastname_label') %></th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <td><%= project.celebrantNamePrefix %></td>
                  <td><%= project.celebrantFirstName %></td>
                  <td><%= project.celebrantLastName %></td>
                </tr>
              </tbody>
            </table>

            <h3 class="mt-6 text-lg font-medium leading-6 text-gray-900 text-center"><%= t('pages.new_project.wedding_party.title') %></h3>
            <table class="mt-3 mx-auto table-fixed">
              <thead>
                <tr>
                  <th><%= t('pages.new_project.wedding_party.bride.firstname_label') %></th>
                  <th><%= t('pages.new_project.wedding_party.bride.lastname_label') %></th>
                  <th><%= t('pages.new_project.wedding_party.groom.firstname_label') %></th>
                  <th><%= t('pages.new_project.wedding_party.groom.lastname_label') %></th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <td><%= project.brideFirstName %></td>
                  <td><%= project.brideLastName %></td>
                  <td><%= project.groomFirstName %></td>
                  <td><%= project.groomLastName %></td>
                </tr>
              </tbody>
            </table>
            <div class="grid grid-cols-3 gap-6 m-9 text-center text-xl">
              <div class="col-span-1">
                <%= link_to project, class: "py-3 px-4 hover:bg-blue-200 hover:text-blue-800 rounded border bg-blue-100" do %>
                  <i class="fas fa-search mr-3"></i><%= t('viewProject') %>
                <% end %>
              </div>
              <div class="col-span-1">
                <%= link_to edit_project_path(project), class: "py-3 px-4 hover:bg-green-200 hover:text-green-800 rounded border bg-green-100" do %>
                  <i class="fas fa-pencil-alt mr-3"></i><%= t('editProject') %>
                <% end %>
              </div>
              <div class="col-span-1">
                <%= link_to project, method: :delete, data: { confirm: 'Are you sure?' }, class: "py-3 px-4 hover:bg-red-200 hover:text-red-800 rounded border bg-red-100" do %>
                  <i class="fas fa-trash-alt mr-3"></i><%= t('deleteProject') %>
                <% end %>
              </div>
            </div>
          </li>
        <% end %>
    </ul>
  </div>
</div>

<%= javascript_pack_tag 'projectsIndex' %>