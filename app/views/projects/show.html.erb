<% if notice.present? %>
  <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
<% end %>

<input type="hidden" id="liturgy" value="<%= @project.liturgy %>" />
<input type="hidden" id="brideFirstName" value="<%= @project.brideFirstName %>" />
<input type="hidden" id="brideLastName" value="<%= @project.brideLastName %>" />
<input type="hidden" id="groomFirstName" value="<%= @project.groomFirstName %>" />
<input type="hidden" id="groomLastName" value="<%= @project.groomLastName %>" />
<input type="hidden" id="celebrantNamePrefix" value="<%= @project.celebrantNamePrefix %>" />
<input type="hidden" id="celebrantFirstName" value="<%= @project.celebrantFirstName %>" />
<input type="hidden" id="celebrantLastName" value="<%= @project.celebrantLastName %>" />
<input type="hidden" id="church" value="<%= @project.church %>" />
<input type="hidden" id="city" value="<%= @project.city %>" />
<input type="hidden" id="weddingdate" value="<%= @project.weddingdate %>" />
<input type="hidden" id="locale" value="<%= I18n.locale %>" />
<input type="hidden" id="isSecured" value="<%= @project.isSecured %>">

<div class="flex flex-col h-screen" data-controller="bookletpreview" data-rings="<%= image_path('wedding-rings.svg') %>">
  <div class="w-full text-center p-3 flex-shrink">
    <%= link_to edit_project_path(@project), class: "mr-3 -mt-1 py-3 px-4 text-lg text-green-500 bg-green-100 hover:bg-green-200 hover:text-green-800 font-bold rounded-b" do %>
      <i class="fas fa-pencil-alt mr-2"></i><%= t('pages.projectIndex.editThisProject') %>
    <% end %>
    <% if @projects.size > 0 then %>
      <%= link_to projects_path, class: "py-3 px-4 text-lg text-purple-500 bg-purple-100 hover:bg-purple-200 hover:text-purple-800 font-bold rounded-b" do %>
          <i class="fas fa-search mr-2"></i><%= t('pages.projectNew.viewYourProjects') %>
      <% end %>
    <% end %>
    <span style="font-family:'EB Garamond';color:white;font-size:1px;">.</span>
    <span style="font-family:'Tangerine';color:white;font-size:1px;">.</span>
    <span style="font-family:'Pinyon Script';color:white;font-size:1px;">.</span>
  </div>
  <canvas id="booklet" data-bookletpreview-target="canvas" class="flex-grow w-full min-h-0 border-solid border-2 border-green-800" style="image-rendering: pixelated;image-rendering: crisp-edges;"></canvas>
</div>
