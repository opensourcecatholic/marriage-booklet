                        <a href="<%= logged_in? ? projects_path : new_project_path %>" class="p-3 md:p-5 m-4 text-xs sm:text-lg md:text-xl text-pink-500 bg-pink-100 hover:bg-pink-200 hover:text-pink-800 font-bold uppercase rounded-md outline-pink-200 inline-block shadow-md">
